# Consul CHECK script for Zimbra LMTP. See https://www.consul.io/docs/agent/checks.html
#
# Return:
#   0 if check is passing
#   1 if check is warning
#   (other) if check is failing
# 

import argparse
import smtplib
import socket
import urlparse

arg_parser = argparse.ArgumentParser()
arg_parser.add_argument('-url', help='URL', default='smtp://127.0.0.1:25')
args = arg_parser.parse_args()

url = urlparse.urlparse(args.url)

try:
	socket.setdefaulttimeout(10)
	if url.scheme in {'lmtps', 'smtps'}:
		smtp = smtplib.SMTP_SSL(url.hostname, url.port)
	elif url.scheme in {'lmtp', 'smtp'}:
		smtp = smtplib.SMTP(url.hostname, url.port)
	else:
		raise IOError("Unsupported scheme in URL")
	
	smtp.quit()
	print "{0}... OK".format(args.url)
	
except IOError as e:
	print "{0}... FAILED: {1}".format(args.url, e)
	exit(2)
except smtplib.SMTPException as e:
	print "{0}... FAILED({1}): {2}".format(args.url, e.errno, e.strerror)
	exit(2)
